<section class="section form" data-anchor="form">
    <div class="dummy-form">
        <h2>Open Home Sign-in</h2>
        <div>
            <input id="name" type="text" placeholder="Full name" />
        </div>
        <div>
            <input id="phone" type="text" placeholder="Phone #" />
        </div>
        <div>
            <input id="email" type="text" placeholder="Email address" />
        </div>
        <div class="iama">
            <p>I am a...</p>
            <label><input id="buyer" type="checkbox" />Buyer?</label>
            <label><input id="vendor" type="checkbox" />Vendor?</label>
        </div>
        <div class="notifications">
            <label><input id="intouch" type="checkbox" />I wish to receive notifications</label>
        </div>
        <div>
            <a id="done">Done</a>
        </div>
    </div>
</section>

<section class="section manage" data-anchor="manage">
    <div class="visitor-list">
        <h2>Visitor List <a id="who"></a></h2>
        <table id="visitors">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Contact Number</th>
                    <th>Email</th>
                    <th>Is Buyer?</th>
                    <th>Is Vendor?</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

        <a id="notify">Send Notification</a>
    </div>
</section>





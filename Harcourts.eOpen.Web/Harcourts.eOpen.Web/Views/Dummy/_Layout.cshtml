<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="Harcourts Facebook App" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <base href="/" />

    <title>@ViewBag.Title</title>

    @* Stylesheets *@
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700,100,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/Content/Site.css" />
</head>
<body>
    <div class="wrapper">
        <header class="main-header">
            <img class="logo" src="/Images/harcourts-logo.svg" alt="Harcourts" />
        </header>

        <main class="main-content">
            <div class="container">
                @RenderBody()
            </div>
        </main>

        <footer class="main-footer">
            
        </footer>
    </div>

    @* Load Javascript in the footer. *@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js" type="text/javascript"></script>
    <script src="/Content/thirdparty.min.js" type="text/javascript"></script>
    
    <!-- build:js /Content/Site.min.js -->
    <script src="/Scripts/Site.js" type="text/javascript"></script>
    <!-- endbuild -->
</body>
</html>
